<% include ../partials/head %>
<h1><%=title%></h1>
<table class='table table-striped table-bordered'>
    <tr>
        <th>hw_addr</th>
        <th>fixed_addr</th>
        <th>action</th>
    </tr>
    <% ips.forEach(function(ip) { %>
    <tr>
        <td><%= ip.identifer %></td>
        <td><%= ip.fixed_addr %></td>
        <td><form action="/fixedip/delete" method="post" class="form-inline" role="form">
                <input type="hidden" name="identifer" value="<%= ip.identifer %>">
                <button type="submit" class="btn btn-danger">DELETE</button>
            </form></td>
    </tr>
    <% }); %>

</table>
<form action="/fixedip" method="post" class="form-inline" enctype="application/x-www-form-urlencoded" role="form">
    <div class="form-group">
        <label for="first_name">Mac Address</label>
        <input type="text" class="form-control" id="identifer" name="identifer" placeholder="Input your identifer">
    </div>
    <div class="form-group">
        <label for="last_name">Fixed Address</label>
        <input type="text" class="form-control" id="fixed_addr" name="fixed_addr" placeholder="Input your fixed_addr">
    </div>
    <button type="submit" class="btn btn-success">UPSERT</button>
</form>
<% include ../partials/foot %>